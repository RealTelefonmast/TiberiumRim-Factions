<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<TR.TRThingDef ParentName="StationBase_TR">
		<defName>Nod_Factory</defName>
		<label>Nod Assembler</label>
		<description>The Nod Assembler is used to create high-tier materials and items.</description>
		<thingClass>Building_WorkTable</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<size>(3,2)</size>
		<minifiedDef />
		<thingCategories Inherit="false" />
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Buildings/Nod/Production/Factory/Base</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<statBases>
			<MaxHitPoints>350</MaxHitPoints>
			<WorkToBuild>5000</WorkToBuild>
			<Flammability>1</Flammability>
		</statBases>
		<costList>
			<Steel>200</Steel>
			<ComponentIndustrial>10</ComponentIndustrial>
		</costList>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<recipes>
			<li>MakeCarbonPlate</li>
			<li>MakeLQTiberiumCore</li>
		</recipes>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<fillPercent>0.5</fillPercent>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<hasInteractionCell>true</hasInteractionCell>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>300</basePowerConsumption>
			</li>
			<li Class="TR.CompProperties_TNS">
				<networks>
					<li>
						<networkDef>TiberiumNetwork</networkDef>				
						<volumeConfig>
							<capacity>1000</capacity>
							<!--<dropContents>true</dropContents>-->
							<leaveContainer>true</leaveContainer>
							<values>
								<allowedValues>
									<li>TibGreen</li>	
									<li>TibBlue</li>	
									<li>TibRed</li>	
									<li>TibSludge</li>	
								</allowedValues>
							</values>
						</volumeConfig>
						<roles>
							<li>Transmitter</li>
							<li>Requester</li>
						</roles>
					</li>
				</networks>
				<!--generalIOPattern>#+#|###|</generalIOPattern-->
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<requisites>
			<tiberiumResearch>
				<li>NodExperimental1</li>
			</tiberiumResearch>
		</requisites>
		<modExtensions>
			<li Class="TeleCore.SubMenuExtension">
				<groupDef>Nod</groupDef>
				<category>Processing</category>
			</li>
		</modExtensions>
	</TR.TRThingDef>
	
	<TR.TRThingDef ParentName="StationBase_TR">
		<defName>Nod_Hangar</defName>
		<label>Nod hangar</label>
		<description>This hangar is used for mechanical unit construction.</description>
		<size>(5,5)</size>
		<minifiedDef />
		<thingCategories Inherit="false" />
		<castEdgeShadows>true</castEdgeShadows>
		<hasInteractionCell>true</hasInteractionCell>
		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<fillPercent>1</fillPercent>
		<interactionCellOffset>(0,0,-3)</interactionCellOffset>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Buildings/Nod/Production/Hangar/Base</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>7,7)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<requisites>
			<tiberiumResearch>
				<li>NodExperimental1</li>
			</tiberiumResearch>
		</requisites>
		<statBases>
			<MaxHitPoints>1000</MaxHitPoints>
			<WorkToBuild>5000</WorkToBuild>
			<Flammability>0.5</Flammability>
		</statBases>
		<costList>
			<Steel>500</Steel>
			<ComponentIndustrial>15</ComponentIndustrial>
		</costList>
		<inspectorTabs>
			<li>TR.ITab_MechConstruction</li>
		</inspectorTabs>
		<comps>
			<li Class="TeleCore.CompProperties_FX"> 
				<fxLayers>
					<li>
						<graphicData>
							<texPath>Buildings/Nod/Production/Hangar/BaseLight</texPath>
							<graphicClass>Graphic_Multi</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(7,7)</drawSize>
						</graphicData>
						<needsPower>true</needsPower>
					</li>
					<li>
						<graphicData>
							<texPath>Buildings/Nod/Production/Hangar/Cover</texPath>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>(7,7)</drawSize>
						</graphicData>
					</li>
					<li>
						<graphicData>
							<texPath>Buildings/Nod/Production/Hangar/CoverLight</texPath>
							<graphicClass>Graphic_Multi</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(7,7)</drawSize>
						</graphicData>
						<needsPower>true</needsPower>
					</li>
				</fxLayers>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>500</basePowerConsumption>
			</li>
		</comps>
		<modExtensions>
			<li Class="TeleCore.SubMenuExtension">
				<groupDef>Nod</groupDef>
				<category>Processing</category>
			</li>
		</modExtensions>
	</TR.TRThingDef>
	
